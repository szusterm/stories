{
  "defaultSeverity": "error",
  "extends": "tslint:recommended",
  "rules": {
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "no-empty-interface": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "one-line": false,
    "no-magic-numbers": [
      true,
      -1,
      0,
      1,
      2
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "private-static-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method",
          "static-method"
        ]
      }
    ]
  }
}